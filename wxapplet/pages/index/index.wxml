<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view class="btn-area" id="nav-area">
    <navigator bindtap="navToIndex" class="nav-item" url="../logs/logs" hover-class="navigator-hover">
      <p><image src="../images/tab_首页1.png"></image></p>
      <p><text>首页</text></p>
    </navigator>
    <navigator bindtap="navToFinancial" class="nav-item" url="../logs/logs" hover-class="navigator-hover">
      <p><image src="../images/tab_理财1.png"></image></p>
      <p><text>理财</text></p>
    </navigator>
    <navigator bindtap="navToMine" class="nav-item" url="../logs/logs" hover-class="navigator-hover">
      <p><image src="../images/tab_我的1.png"></image></p>
      <p><text>我的</text></p>
    </navigator>
  </view>
</view>
<script src="../../js/zepto.min.js"></script>
